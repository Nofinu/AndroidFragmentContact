<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:id="@+id/titleDetails"
                android:text="Details Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="35dp"
                android:textAlignment="center"
        />

        <TextView
                android:id="@+id/firstnameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titleDetails"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
        />

        <TextView
                android:id="@+id/lastnameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/firstnameContent"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
        />

        <TextView
                android:id="@+id/emailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lastnameContent"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>